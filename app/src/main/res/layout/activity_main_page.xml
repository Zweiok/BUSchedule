<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main_page"
    android:paddingBottom="0dp"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:paddingTop="0dp"
    tools:context="com.example.adminto.buschedule.MainPage"
    android:hapticFeedbackEnabled="false"
    android:background="@color/cardview_light_background"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:paddingBottom="0dp"
    tools:paddingLeft="0dp"
    tools:paddingRight="0dp"
    tools:paddingTop="0dp"
    android:clipToPadding="true"
    android:theme="@style/AppTheme">

    <Button
        android:text="Вхід"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:background="@android:drawable/divider_horizontal_bright"
        android:elevation="0dp"
        android:textStyle="normal|bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:onClick="setLoginPass"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/editText2"
        android:layout_alignBottom="@+id/editText2"
        android:layout_toRightOf="@+id/editText2"
        android:layout_alignTop="@+id/editText2">

        <Button
            android:layout_width="46dp"
            android:layout_height="wrap_content"
            android:id="@+id/button4"
            android:background="@android:drawable/ic_media_play"
            android:layout_alignBottom="@+id/editText2"
            android:layout_below="@+id/textView2"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView"
            android:layout_toRightOf="@+id/textView2"
            android:layout_toEndOf="@+id/textView2"
            android:onClick="openScheduleForm"/>
    </FrameLayout>

    <TextView
        android:text=" BANKING \n      UNIVERSITY"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView"
        android:clickable="false"
        android:textSize="36sp"
        android:fontFamily="serif"
        android:textColor="@android:color/holo_green_dark"
        android:textStyle="normal|bold"
        android:editable="false"
        android:layout_marginBottom="87dp"
        android:layout_above="@+id/textView5"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Розклад для"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView4"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:layout_marginBottom="144dp"
        android:layout_above="@+id/button3"
        android:layout_alignLeft="@+id/textView2"
        android:layout_alignStart="@+id/textView2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editText2"
        android:background="@android:drawable/editbox_background_normal"
        android:textColorLink="@color/cardview_shadow_start_color"
        tools:layout_height="35dp"
        android:textColor="@android:color/black"
        android:autoText="false"
        tools:autoText="false"
        android:password="false"
        tools:freezesText="false"
        android:freezesText="false"
        android:elegantTextHeight="false"
        android:hint="Номер групи..."
        tools:hint="Номер групи..."
        android:textColorHint="@android:color/darker_gray"
        android:layout_below="@+id/spinner"
        android:layout_alignLeft="@+id/textView"
        android:layout_alignStart="@+id/textView" />

    <TextView
        android:text="Приклад: 101-ФКБ"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textColor="@android:color/darker_gray"
        android:layout_marginTop="23dp"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_alignStart="@+id/editText2" />

    <TextView
        android:text="Сообщение об ошибке"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:textColor="@android:color/holo_red_dark"
        android:visibility="invisible"
        android:layout_below="@+id/editText2"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spinner"
        android:focusable="false"
        android:layout_alignTop="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_toEndOf="@+id/textView4" />

    <TextView
        android:text="  групи"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        tools:textSize="18sp"
        android:textColor="@android:color/holo_green_dark"
        android:height="25dp"
        android:width="20dp"
        android:editable="false"
        android:freezesText="true"
        android:layout_alignBaseline="@+id/textView4"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/textView4"
        android:layout_alignRight="@+id/spinner"
        android:layout_alignEnd="@+id/spinner" />

</RelativeLayout>
